{
  "compilerOptions": { 
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "declaration" : true,
    "lib": ["dom", "es6"]
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
